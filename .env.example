# AURA-SHIELD API Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Port on which the server runs
PORT=3000

# Environment: development, production, staging
NODE_ENV=production

# ============================================================================
# AUTHENTICATION
# ============================================================================

# API Keys for authentication (comma-separated, no spaces)
# Format: key1,key2,key3
# These will be trimmed automatically
API_KEYS=sk-aura-default-key,sk-aura-test-key-123

# ============================================================================
# DATABASE (Optional - for future use)
# ============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/aura_shield
# REDIS_URL=redis://localhost:6379

# ============================================================================
# LOGGING
# ============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# ============================================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================================

# Allowed origins (leave as * for development, restrict for production)
CORS_ORIGIN=*

# ============================================================================
# DEPLOYMENT
# ============================================================================

# Render deployment URL (for Render.com)
# RENDER_URL=https://your-service.onrender.com
